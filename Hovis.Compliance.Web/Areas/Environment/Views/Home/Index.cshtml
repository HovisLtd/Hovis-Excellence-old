@using Microsoft.Ajax.Utilities
@model IEnumerable<Hovis.Compliance.Web.Areas.AppShared.DocumentListViewModel>

<header class="header headerWithTabs navbar bg-default">
    <div class="navbar-header mg-r-lg">
        <h3>
            Environment
        </h3>
    </div>
    <div class="clearfix"></div>

    <ul class="nav navbar-nav nav-tabs">
        <li class="active">
            <a href="#documentsTab" data-toggle="tab">Documents</a>
        </li>
        <li class="">
            <a href="#performanceTab" data-toggle="tab">Performance</a>
        </li>
    </ul>
</header>

<!-- content wrapper -->
<div class="content-wrap">
    <div class="row">
        <div class="col-lg-12">

            <section class="tab-content ">

                <section class="tab-pane active" id="documentsTab">
                    <section class="panel bg-none">

                        @if (Model.Any())
                        {

                            <div class="panel-group" id="accordion">

                                @{ var accordionIndex = 1; }
                                @foreach (var documentCategory in Model)
                                {
                                    var accordionLink = "collapse" + accordionIndex;

                                    <div class="panel">
                                        <div class="panel-heading">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#@accordionLink">
                                                @documentCategory.DocumentCategory
                                            </a>
                                        </div>
                                        <div id="@accordionLink" class="panel-collapse collapse">
                                            <div class="panel-body">

                                                <table class="table no-margin">
                                                    <thead>
                                                        <tr>
                                                            <th class="col-md-5 pd-l-lg">
                                                                <span class="pd-l-sm"></span>Name
                                                            </th>
                                                            <th class="col-md-2">Document Type</th>
                                                            <th class="col-md-2"></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var document in documentCategory.Documents)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <span class="pd-l-sm"></span>
                                                                    @Html.ActionLink(document.Title, "Index", "Document", new { id = @document.Id }, null)
                                                                </td>
                                                                <td>@document.DocumentType.Name</td>
                                                                <td>
                                                                    @Html.ActionLink("View", "Index", "Document", new { id = @document.Id }, new { @class = "btn btn-xs btn-success" })
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                                        accordionIndex++;
                                }
                            </div>
                        }
                        else
                        {
                            <p>No Documents found</p>
                        }
                    </section>
                </section>

                <section class="tab-pane" id="performanceTab">
                    <section class="panel bg-none">
                        coming soon
                    </section>
                </section>
            </section>
        </div>
    </div>
</div>