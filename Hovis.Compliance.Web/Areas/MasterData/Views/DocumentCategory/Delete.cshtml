@model Hovis.Compliance.Web.Models.DocumentCategory

    <header class="header">
        <h3>Delete Document Category</h3>
    </header>
    <div class="content-wrap">
        <div class="row">

            <div class="col-md-12">

                <section class="panel">
                    <div class="panel-body ">

                        <p>Do you really want to delete the Document Category - @Model.Name</p>

                        @using (Html.BeginForm("Delete", "DocumentCategory", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.Id);
                            <a href="@Url.Action("Index")" class="btn btn-success">No</a>
                            <input type="submit" class="btn btn-danger" value="Yes" />
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>