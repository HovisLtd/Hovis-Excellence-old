@model Hovis.Compliance.Web.Areas.MasterData.ViewModels.PersonAddEditViewModel

<header class="header">
    @if (Model.Person.Id == 0)
    {
        <h3>New Person </h3>
    }
    else
    {
        <h3>Edit Person </h3>
    }
</header>
<!-- content wrapper -->
<div class="content-wrap">
    <div class="row">
        <div class="col-lg-12">
            <div class="tab-content ">
                @using (Html.BeginForm("Save", "Person"))
                {
                    @Html.HiddenFor(x => x.Person.Id)

                    <div class="row">
                        <div class="col-lg-6">
                            <section class="panel">
                                <header class="panel-heading">Person Details</header>
                                <div class="panel-body">

                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Person.FirstName)
                                        @Html.TextBoxFor(x => x.Person.FirstName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Person.FirstName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Person.LastName)
                                        @Html.TextBoxFor(x => x.Person.LastName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Person.LastName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Person.EmailAddress)
                                        @Html.TextBoxFor(x => x.Person.EmailAddress, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Person.EmailAddress, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Person.EmployeeNumber)
                                        @Html.TextBoxFor(x => x.Person.EmployeeNumber, new { @class = "form-control" })
                                    </div>
                                </div>
                            </section>
                        </div>

                        <div class="col-lg-6 pull-right">
                            <section class="panel">
                                <div class="panel-body">

                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Person.Site)
                                        @Html.DropDownListFor(x => x.Person.SiteId, new SelectList(Model.AvailableSites, "Id", "Name"), new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Person.Role)
                                        @Html.DropDownListFor(x => x.Person.RoleId, new SelectList(Model.AvailablePersonRoles, "Id", "Name"), new { @class = "form-control" })
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(x => x.Person.IsSiteAdmin)
                                            Site Admin?
                                        </label>
                                    </div>
                                </div>
                            </section>
                        </div>

                        <div class="col-lg-6 pull-right">
                            <section class="panel">
                                <div class="panel-body">
                                    <button type="submit" class="btn btn-default">Save</button>
                                </div>
                            </section>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>