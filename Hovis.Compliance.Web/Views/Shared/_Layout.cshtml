<!doctype html>
<html lang="">
<head>
    <!-- meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1">
    <!-- /meta -->
    @{
        string pageTitle = @ViewBag.Title ?? "Hovis Application";
    }
    <title>@pageTitle</title>

    @Styles.Render("~/content/bundles/css")
    @Styles.Render("~/content/bundles/fonts")

    <!-- template styles -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- load modernizer -->
    @Scripts.Render("~/content/bundles/scripts/modernizr")
</head>
<!-- body -->
<body>
    <div class="app">
        <!-- top header -->
        <header class="header header-fixed navbar">
            <div class="brand">
                <a href="javascript:;" class="fa fa-bars off-left visible-xs" data-toggle="off-canvas" data-move="ltr"></a>
                <a href="/" class="navbar-brand text-white">

                    <img src="/Content/img/hovis-excellence-logo.png" alt="Hovis Excellence" />
                </a>
            </div>
            @Html.Partial("_LoginPartial")
        </header>
        <!-- /top header -->
        <section class="layout">
            <!-- sidebar menu -->
            <aside class="sidebar canvas-left">
                <!-- main navigation -->
                <nav class="main-navigation">

                    @if (User.IsInRole("Admin"))
                    {
                        Html.RenderPartial("~/Areas/MasterData/Views/Shared/MasterDataNavigation.cshtml");
                        <hr />
                    }

                    @{
                        Html.RenderPartial("Navigation/MainNavigation");
                    }
                </nav>
                <!-- /main navigation -->
            </aside>
            <!-- /sidebar menu -->
            <!-- main content -->
            <section class="main-content">
                <!-- content wrapper -->
                @RenderBody()
                <!-- /content wrapper -->
            </section>
            <!-- /main content -->
        </section>
    </div>
    <!-- core scripts -->
    @Scripts.Render("~/content/bundles/scripts/jquery")
    <script src="/Content/vendor/jquery.easing.min.js"></script>
    <script src="/Content/vendor/jquery.placeholder.js"></script>
    <script src="/Content/vendor/fastclick.js"></script>
    <script src="/Scripts/off-canvas.js"></script>
    <!-- /core scripts -->
    <!-- page level scripts -->
    @Scripts.Render("~/content/bundles/scripts/bootstrap-scripts")

    <script src="/Scripts/main.js"></script>

    @RenderSection("scripts", required: false)
    <!-- /page level scripts -->
</body>
<!-- /body -->
</html>